@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>
<div class="table-responsive">
<table class="text-nowrap table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome de Usuário</th>
            <th>Email</th>
            <th>Email Confirmado</th>
            <th>Número de Telefone</th>
            <th>Número de Telefone Confirmado</th>
            <th>Bloqueio Ativo</th>
            <th>Bloqueio Expira Em</th>
            <th>Autenticação em Dois Fatores</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@(user.EmailConfirmed ? "Sim" : "Não")</td>
                <td>@user.PhoneNumber</td>
                <td>@(user.PhoneNumberConfirmed ? "Sim" : "Não")</td>
                <td>@(user.LockoutEnabled ? "Sim" : "Não")</td>
                <td>@(user.LockoutEnd.HasValue ? user.LockoutEnd.Value.ToString("dd/MM/yyyy HH:mm:ss") : "Nunca")</td>
                <td>@(user.TwoFactorEnabled ? "Sim" : "Não")</td>
            </tr>
        }
    </tbody>
</table>
</div>







